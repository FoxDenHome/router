
config ddns 'global'
	option ddns_dateformat '%F %R'
	option ddns_loglines '250'
	option ddns_rundir '/var/run/ddns'
	option ddns_logdir '/var/log/ddns'

config service 'he_ipv4'
	option service_name 'he.net'
	option use_ipv6 '0'
	option enabled '1'
	option lookup_host 'router.dyn.foxden.network'
	option domain 'router.dyn.foxden.network'
	option username 'router.dyn.foxden.network'
	option password 'REMOVED'
	option ip_source 'network'
	option use_syslog '2'
	option check_unit 'minutes'
	option force_unit 'minutes'
	option retry_unit 'seconds'
	option ip_network 'WAN'
	option interface 'WAN'
	option dns_server 'ns1.he.net'
	option use_https '1'
	option cacert '/etc/ssl/certs'

config service 'local_ipv4'
	option use_ipv6 '0'
	option update_script '/etc/scripts/local-ddns-update.sh'
	option use_syslog '2'
	option check_unit 'minutes'
	option force_unit 'minutes'
	option retry_unit 'seconds'
	option ip_network 'WAN'
	option interface 'WAN'
	option lookup_host 'vpn.foxden.network'
	option dns_server '127.0.0.1'
	option enabled '1'
	option domain 'vpn.foxden.network'
	option username 'vpn.foxden.network'
	option password 'REMOVED'
	option ip_source 'network'

